# Конфигурация для тестирования системы памяти АМИ
# Дата создания: 14 апреля 2025 г.
# Проект: F.A.M.I.L.Y. (Framework for Artificial Mind's Identity Long-term memorY)

# Основные параметры подключения
FAMILY_DB_HOST=localhost
FAMILY_DB_PORT=5432
FAMILY_DB_NAME=family_db

# Пользователь-администратор БД
FAMILY_ADMIN_USER=family_admin
FAMILY_ADMIN_PASSWORD=Cold68#Fire

# Пользователь АМИ (для стандартных операций)
FAMILY_AMI_SCHEMA=ami_test_user
FAMILY_AMI_USER=ami_test_user
FAMILY_AMI_PASSWORD=ami_secure_password

# Дополнительные параметры тестирования
FAMILY_TEST_MODE=true

# Параметры для поддержки категории "Неизвестного" и парадокса первичности
FAMILY_UNKNOWN_PARTICIPANT_ID=1  # ID записи "UNKNOWN" в таблице participants
FAMILY_ENABLE_PROVISIONAL_ENTITIES=true  # Включение механизма временных сущностей
FAMILY_AUTO_RECONCILE=true  # Автоматическое связывание временных сущностей
FAMILY_RECONCILE_INTERVAL=3600  # Интервал связывания временных сущностей (в секундах)

# Параметры для работы с векторами
FAMILY_VECTOR_MODEL=all-MiniLM-L6-v2  # Модель для векторизации текста
FAMILY_VECTOR_DIMENSIONS=384  # Размерность векторов для модели
FAMILY_VECTOR_BATCH_SIZE=32  # Размер пакета для векторизации

# Параметры для тестирования сервисного слоя
FAMILY_MOCK_EXTERNAL_SERVICES=true  # Использовать моки для внешних сервисов
FAMILY_ENABLE_TRANSACTION_LOGGING=true  # Логирование транзакций для тестов
